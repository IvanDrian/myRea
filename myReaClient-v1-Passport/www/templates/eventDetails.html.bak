<ion-view view-title="Event Details">
	<ion-nav-buttons side="right">
		<button class="button icon ion-more" ng-click="openPopover($event)"></button>
	</ion-nav-buttons>
	<ion-content>
		<div class="card">
			<div class="item item-body item-text-wrap">
				<h2>{{event.name}}
				<p>{{event.description}}</p>
			</div>
		</div>
